@model Domain.CategoryItem

@{
    ViewBag.Title = "EditCategoryItem";
}

<h2>Edit Category Item</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true) 
    <fieldset>
        <legend>CategoryItem</legend>

        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.ImageName)
        @Html.HiddenFor(model => model.ImageExtension)
        @Html.HiddenFor(model => model.Category.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.ItemName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ItemName)
            @Html.ValidationMessageFor(model => model.ItemName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Enable)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Enable)
            @Html.ValidationMessageFor(model => model.Enable)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Priority)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Priority)
            @Html.ValidationMessageFor(model => model.Priority)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ImageUrl)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ImageUrl)
            @Html.ValidationMessageFor(model => model.ImageUrl)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ImageThumbnailUrl)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ImageThumbnailUrl)
            @Html.ValidationMessageFor(model => model.ImageThumbnailUrl)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
    <hr />
     <fieldset>
        <legend>Products</legend>
        <div id="productsResult" data-url="@Url.Action("List","Product", new { id = Model.Id})">
            <img id="productLoaderImage" src="../../Images/Style/loading" />
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Edit", "Category", new { id = Model.Category.Id }, null)
</div>

@section scripts{
   <script type="text/javascript" src="@Url.Content("~/Styles/js/custom/CategoryItem/edit.js")" />
}


