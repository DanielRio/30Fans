@model IEnumerable<Domain.Product>

<p>
    @Html.ActionLink("Create New Product", "Create", "Product", new { idCategoryItem = (long)ViewBag.CategoryItemId }, null)
</p>            

<table style="width:100%">
    <tr>
        <th>
            ProductName
        </th>
        <th>
            Qty
        </th>
        <th>
            PaymentCode
        </th>
        <th>
            Enable
        </th>
        <th>
            Priority
        </th>
        <th>
            ImageName
        </th>
        <th>
            Extension
        </th>
        <th>
            ImageUrl
        </th>
        <th>
            PublisheddDate
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AvailableQuantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaymentCode)
        </td>
        <td>
            @Html.ConvertBooleanToYesNo(item.Enable)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Priority)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImageName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImageExtension)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImageUrl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PublishedDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Upload Image", "UploadImage", "Product", new { id = item.Id }, null) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
